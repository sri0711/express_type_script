{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:security/recommended", "plugin:unicorn/recommended"],
	"overrides": [],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"func-style": ["error", "expression", {"allowArrowFunctions": true}],
		"no-var": "error",
		"lines-around-comment": ["error", {"beforeLineComment": true}],
		"@typescript-eslint/no-explicit-any": "off"
	}
}
